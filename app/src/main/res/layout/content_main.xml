<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <!-- XML file for the style (saved in res/values/) -->


    <!-- XML file that applies the style to the TextView (saved in res/layout) -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="178dp"
        android:height="32dp"
        android:fontFamily="@font/lato_bold"
        android:lineSpacingMultiplier="1.23"
        android:text="Validate HTTP"
        android:textColor="@color/colorAccent"
        android:textSize="26sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="74dp" />

    <Button
        android:id="@+id/bringTextBtn"
        android:layout_width="142dp"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:fontFamily="@font/lato"
        android:text="Connect"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/URLInput"
        tools:layout_editor_absoluteX="36dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="178dp"
        android:height="32dp"
        android:fontFamily="@font/lato_bold"
        android:lineSpacingMultiplier="1.23"
        android:text="Response"
        android:textColor="@color/colorAccent"
        android:textSize="26sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="332dp" />


    <TextView
        android:id="@+id/outText"
        android:layout_width="289dp"
        android:layout_height="152dp"


        android:layout_marginTop="120dp"
        android:text="Please connect to view the response"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.295"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bringTextBtn" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/URLInput"
        android:layout_width="340dp"
        android:layout_height="51dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="130dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_light"

            android:hint="Enter URL Here"
            android:inputType="text"
            android:lineSpacingExtra="8sp"
            android:textColor="@android:color/darker_gray" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>